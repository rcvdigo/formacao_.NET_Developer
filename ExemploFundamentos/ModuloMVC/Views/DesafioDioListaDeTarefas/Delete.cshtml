@model Tarefa

@{
    ViewData["Title"] = "Deletar tarefa";
}

<h1 style="color: red;">Deseja realmente deletar esta tarefa? Essa opeção é irreversível </h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.Id)
        </dt> @* Nome da coluna *@
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.Id)
        </dt> @* Nome do valor *@
        <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.Titulo)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.Titulo)
        </dt>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.Status)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.Status)
        </dt>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.Data)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.Data)
        </dt>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.Descricao)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.Descricao)
        </dt>
    </dl>
</div>
<form asp-action="Delete">
    <input type="submit" value="Deletar" class="btn btn-danger"/>
</form>
<br>
<a asp-action="Index">Voltar</a>